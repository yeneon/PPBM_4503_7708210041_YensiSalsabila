<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lemonmeng"
    tools:context=".RegistAct">

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/space1"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cheers"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/space1"
        android:id="@+id/img1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:text="CHEERS"
        android:fontFamily="@font/pio"
        android:textSize="50dp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txt1"
        android:text="CREATE YOUR ACCOUNT"
        android:fontFamily="@font/cool"
        android:textSize="28dp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:id="@+id/text2"/>

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shapelog"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text2"
        android:id="@+id/img2">

    <EditText
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_weight="1"
        android:layout_marginTop="54dp"
        android:hint="Your Name"/>

    <EditText
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_weight="1"
        android:layout_below="@id/name"
        android:hint="Email"/>

    <EditText
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/pw"
        android:layout_weight="1"
        android:layout_below="@id/email"
        android:hint="Password"/>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="36dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pw"
        android:id="@+id/btn">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sign Up"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/goldenpoppy"
            android:id="@+id/signup"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sign Up with email"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/goldenpoppy"
            android:id="@+id/wemail"/>

    </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:text="Already have account? Log In"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cool"
        android:id="@+id/already"/>

</RelativeLayout>